{
  "name": "@kobbleio/auth-spa-js",
  "description": "Add authentication to your Single Page Application using Kobble in under 10 minutes.",
  "private": false,
  "version": "1.1.2",
  "keywords": [
    "kobble",
    "auth",
    "spa",
    "javascript",
    "pkce"
  ],
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "buildpack": "npm run build && npm pack",
    "publish": "npm run buildpack && npm publish --access public",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --config='./jest.ci-config.ts'"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.2",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rollup-plugin-typescript-paths": "^1.5.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
